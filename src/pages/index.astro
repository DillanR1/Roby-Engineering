  <style>
    /* SKULL WATERMARK - Below fold, behind all content */
    .skull-watermark {
      position: fixed;
      top: 90vh; /* Start below the fold - user must scroll to see it */
      right: -5%;
      width: 450px;
      opacity: 0.06;
      z-index: -1; /* Behind everything */
      pointer-events: none;
      animation: skull-drift 25s ease-in-out infinite;
    }
    
    .skull-watermark img {
      width: 100%;
      filter: drop-shadow(0 0 80px rgba(255, 102, 0, 0.25));
    }
    
    @keyframes skull-drift {
      0%, 100% { 
        transform: translate(0, 0) rotate(0deg); 
        opacity: 0.06;
      }
      50% { 
        transform: translate(-30px, -40px) rotate(3deg); 
        opacity: 0.08;
      }
    }
    
    /* STICKY NAV - Fixed spacing */
    .sticky-nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      padding: 0.75rem 2rem;
      background: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(24px);
      -webkit-backdrop-filter: blur(24px);
      border-bottom: 1px solid rgba(255, 102, 0, 0.3);
      display: flex;
      justify-content: space-between;
      align-items: center;
      z-index: 1000;
      transform: translateY(-100%);
      transition: transform 0.2s ease;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      box-sizing: border-box;
    }
    
    .sticky-nav.visible {
      transform: translateY(0);
    }
    
    .nav-brand {
      font-weight: 700;
      color: #fff;
      font-size: 1.2rem;
      letter-spacing: 0.5px;
      white-space: nowrap;
    }
    
    .nav-links {
      display: flex;
      gap: 1.5rem;
      flex-shrink: 0;
    }
    
    .nav-links a {
      color: rgba(255, 255, 255, 0.9);
      text-decoration: none;
      font-weight: 600;
      font-size: 0.9rem;
      transition: all 0.3s ease;
      position: relative;
      white-space: nowrap;
    }
    
    .nav-links a::after {
      content: "";
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 2px;
      background: #ff6600;
      transition: width 0.3s ease;
    }
    
    .nav-links a:hover {
      color: #ff6600;
    }
    
    .nav-links a:hover::after {
      width: 100%;
    }
    
    /* TAGLINE - Jazzed up */
    .tagline {
      margin-top: 1rem;
    }
    
    .tagline .latin {
      font-size: 1.4rem;
      font-weight: 500;
      font-style: italic;
      color: rgba(255, 255, 255, 0.9);
      letter-spacing: 0.15em;
      text-transform: uppercase;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 102, 0, 0.9));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-shadow: none;
      display: inline-block;
      padding: 0.5rem 0;
      border-top: 1px solid rgba(255, 102, 0, 0.3);
      border-bottom: 1px solid rgba(255, 102, 0, 0.3);
    }
    
    /* CTA BUTTONS */
    .cta-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      margin-top: 2rem;
      flex-wrap: wrap;
    }
    
    .cta-primary, .cta-secondary {
      padding: 1rem 2rem;
      border-radius: 0.75rem;
      text-decoration: none;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      transition: all 0.3s ease;
      font-size: 1rem;
    }
    
    .cta-primary {
      background: linear-gradient(135deg, rgba(255, 102, 0, 0.3), rgba(255, 102, 0, 0.4));
      border: 1px solid rgba(255, 102, 0, 0.5);
      color: #ff6600;
    }
    
    .cta-primary:hover {
      background: linear-gradient(135deg, rgba(255, 102, 0, 0.4), rgba(255, 102, 0, 0.5));
      box-shadow: 0 0 40px rgba(255, 102, 0, 0.4);
      transform: translateY(-2px);
    }
    
    .cta-secondary {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: #fff;
    }
    
    .cta-secondary:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.4);
      transform: translateY(-2px);
    }
    
    /* PORTFOLIO GRID */
    .portfolio-grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
    
    /* TECH STACK & SKILLS TAGS */
    .tech-stack, .skills-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin: 1rem 0;
      font-size: 0.9rem;
    }
    
    .tech-stack {
      color: rgba(255, 255, 255, 0.7);
      font-style: italic;
    }
    
    .skills-tags span {
      background: rgba(255, 102, 0, 0.15);
      border: 1px solid rgba(255, 102, 0, 0.3);
      padding: 0.4rem 0.85rem;
      border-radius: 0.5rem;
      color: #ff8833;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    
    .skills-tags span:hover {
      background: rgba(255, 102, 0, 0.25);
      border-color: rgba(255, 102, 0, 0.5);
      transform: translateY(-2px);
    }
    
    /* SKILLS GRID */
    .skills-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }
    
    .skill-category {
      background: rgba(255, 255, 255, 0.02);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 1rem;
      padding: 1.5rem;
      transition: all 0.3s ease;
    }
    
    .skill-category:hover {
      background: rgba(255, 255, 255, 0.04);
      border-color: rgba(255, 102, 0, 0.3);
      transform: translateY(-4px);
    }
    
    .skill-category h3 {
      color: #ff6600;
      margin-top: 0;
      font-size: 1.25rem;
    }
    
    .skill-category p {
      color: rgba(255, 255, 255, 0.8);
      line-height: 1.6;
      margin: 0.5rem 0 0 0;
      font-size: 1rem;
    }
    
    /* SECTION INTRO */
    .section-intro {
      text-align: center;
      max-width: 800px;
      margin: 0 auto 2rem auto;
      font-size: 1.15rem;
      color: rgba(255, 255, 255, 0.85);
      line-height: 1.7;
    }
    
    .section-intro strong {
      color: #ff6600;
    }
    
    /* MOBILE OPTIMIZATIONS */
    @media (max-width: 768px) {
      .skull-watermark {
        width: 300px;
        top: 85vh;
        right: -15%;
      }
      
      .sticky-nav {
        padding: 0.6rem 1rem;
      }
      
      .nav-links {
        gap: 0.75rem;
      }
      
      .nav-links a {
        font-size: 0.8rem;
      }
      
      .nav-brand {
        font-size: 1rem;
      }
      
      .tagline .latin {
        font-size: 1.1rem;
        letter-spacing: 0.1em;
      }
      
      .cta-buttons {
        flex-direction: column;
        align-items: stretch;
      }
      
      .cta-primary, .cta-secondary {
        text-align: center;
      }
      
      .portfolio-grid {
        grid-template-columns: 1fr;
      }
      
      .skills-grid {
        grid-template-columns: 1fr;
      }
    }
    
    @media (max-width: 480px) {
      .sticky-nav {
        padding: 0.5rem 0.75rem;
      }
      
      .nav-links {
        gap: 0.5rem;
      }
      
      .nav-links a {
        font-size: 0.75rem;
      }
      
      .nav-brand {
        font-size: 0.9rem;
      }
    }
  </style>

  <script>
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Sticky nav on scroll
    const nav = document.querySelector('.sticky-nav');
    window.addEventListener('scroll', () => {
      if (nav) {
        if (window.scrollY > 200) {
          nav.classList.add('visible');
        } else {
          nav.classList.remove('visible');
        }
      }
    });
  </script>
</body>
</html>